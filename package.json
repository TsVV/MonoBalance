{
  "name": "monobalance",
  "version": "1.0.0",
  "description": "Моніторинг балансу Monobank з конвертацією валют (Electron)",
  "author": "Vasyl Tsykhmystro",
  "license": "CC-BY-NC-4.0",
  "main": "main.js",
  "type": "commonjs",
  "keywords": [
    "electron",
    "monobank",
    "balance",
    "converter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/TsVV/MonoBalance.git"
  },
  "homepage": "https://github.com/TsVV/MonoBalance",
  "bugs": {
    "url": "https://github.com/TsVV/MonoBalance/issues"
  },
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder -w"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "keytar": "^7.9.0"
  },
  "build": {
    "appId": "io.postach.tsvv.monobalance",
    "asar": true,
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "assets/**",
      "!**/*.map",
      "!**/*.test.*",
      "!node_modules/.cache/**"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "MonoBalance-Setup-${version}.exe"
    }
  }
}
