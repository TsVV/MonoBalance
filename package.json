{
  "name": "MonoBalance",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder -w"
  },
  "//": "dist = зібрати інсталятор для Windows",
  "keywords": [],
  "author": "",
